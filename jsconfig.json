{
    "compilerOptions": {
        "module": "umd",
        "target": "es6",
        "jsx": "preserve",
        "baseUrl": ".",
        // "checkJs": true,
        "paths": {
            "@/*": [
                "src/*"
            ],
            "@d3/*": [
                "src/components/d3/finished/*"
            ]
        },
        "allowSyntheticDefaultImports": true,
        "moduleResolution": "node"
    },
    "include": [
        "**/*.vue",
        "src/**/*.js"
    ],
    "exclude": [
        "node_modules",
        "**/node_modules/*"
    ]
}